@model AutomatedTellerMachine.Models.Transakcija

@{
    ViewBag.Title = "Prijenos";
}

<h2>Prijenos</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>Transakcija</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.Iznos, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Iznos, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Iznos, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.Label("IBAN primatelja", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBox("IbanPrimatelja", "", new { @name= "IbanPrimatelja", @type = "text", @placeholder = "0000123456", @maxlength = "10", @class = "form-control" })
        </div>
    </div>


    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}
